<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:background="#D9DDDC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BakeryRecosActivity">

        <TextView
            android:id="@+id/bakery_recos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Bakery Recommendations"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/panadero_card"
            android:layout_width="316dp"
            android:layout_height="500dp"
            android:layout_margin="25dp"
            app:layout_constraintTop_toBottomOf="@+id/bakery_recos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/panadero_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="Panadero"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.195"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/panadero_img"
                    android:layout_width="316dp"
                    android:layout_height="182dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/panadero_text"
                    app:srcCompat="@drawable/panadero"/>

                <TextView
                    android:id="@+id/panadero_address"
                    android:layout_width="247dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"
                    android:text="Address: Otek St., Baguio City, Benguet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/panadero_img" />

                <TextView
                    android:id="@+id/panadero_review"
                    android:layout_width="244dp"
                    android:layout_height="157dp"
                    android:layout_marginTop="10dp"
                    android:text="One of my favorite local bakeries. I tend to stop by here often to buy bread. Their best seller is pandesal, which is soft and flavorful. Their cheese bread and banana muffins are also good. Overall, they offer soft and flavorful bread that is perfect for sharing with friends or family."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/panadero_address" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mucho_pan_card"
            android:layout_width="316dp"
            android:layout_height="500dp"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@+id/panadero_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mucho_pan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="Mucho Pan"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.195"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/mucho_pan_img"
                    android:layout_width="316dp"
                    android:layout_height="182dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mucho_pan_text"
                    app:srcCompat="@drawable/muchopan"/>

                <TextView
                    android:id="@+id/mucho_pan_address"
                    android:layout_width="247dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"
                    android:text="Address: Session Road, Baguio City, Benguet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mucho_pan_img" />

                <TextView
                    android:id="@+id/mucho_pan_review"
                    android:layout_width="241dp"
                    android:layout_height="153dp"
                    android:layout_marginTop="10dp"
                    android:text="Another one of my favorite bakeries. I also tend to stop by here when I want a snack before I go to class. Mucho Pan sells tasty bread, especially their bread. But the favorite pastry I always buy from them is their pianono. Overall, this is a great bakery with their soft and delicious pastries."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mucho_pan_address" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/victorias_card"
            android:layout_width="316dp"
            android:layout_height="500dp"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@+id/mucho_pan_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/victorias_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="Victoria's Bakery"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.195"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/victorias_img"
                    android:layout_width="257dp"
                    android:layout_height="165dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.44"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/victorias_text"
                    app:srcCompat="@drawable/victorias" />

                <TextView
                    android:id="@+id/victorias_address"
                    android:layout_width="250dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:text="Address: 4 Branches in Baguio (Mabini St., Centermall, Loakan, and Magsaysay), and 1 branch in La Trinidad (Tiong San, Km.4)"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.376"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/victorias_img" />

                <TextView
                    android:id="@+id/victorias_review"
                    android:layout_width="243dp"
                    android:layout_height="181dp"
                    android:layout_marginTop="10dp"
                    android:text="Victoria's Bakery is known for its delicious cream puffs. And rightly so, because their cream puffs are truly delicious. Its other pastries are also delicious, because they are soft and moist. The Loakan branch also serves for dine-in customers where they can enjoy their bread and cakes with their warm and comforting coffee."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.342"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/victorias_address" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>